extends layout

block main-content
  h1.page-title Playlist matches the current weather
  div#music-flex
    div#playlist
        iframe(style="border-radius: 12px", src=`https://open.spotify.com/embed/playlist/${music.playlists.items[0].id}?utm_source=generator`, width="100%", height="500", frameBorder="0", allowfullscreen="", allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture", loading="lazy")
    div#playlist-info
        h2  #{music.playlists.items[0].name}
        p  #{music.playlists.items[0].description} 
        p Play it   
            a(href=`${music.playlists.items[0].external_urls.spotify}` target="_blank") on your Spotify
        div#back
            a(href="/") Back to Home